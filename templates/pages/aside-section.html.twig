<section class="border-b border-gray-200 py-8 space-y-4 px-4">
    <h3 class="font-bold">{{ title }}</h3>
    <ul class="text-sm leading-7 flex flex-col gap-4">
        {% if (items) %}
            {% for item in items %}
                <li>
                    <a href="{{ item.filePath }}" class="no-underline hover:underline hover:underline-offset-2 hover:text-sky-500">
                        {{ item.title }}
                    </a>
                </li>
            {% endfor %}
        {% else %}
            <li>There are no {{ title }}</li>
        {% endif %}
    </ul>
</section>